<%= content_for :username do %>
  <%= resource.name %>
<% end %>
<div class="container main">
  <div class="row">
    <div class="col-md-9">
      <%= render "shared/mail_submit" %>

      <ul class="apps">
        <% resource.top_10_apps.each do |app| %>
          <li class="app clearfix">
            <div class="logo pull-left">
              <%= link_to app do %>
                <%= image_tag app.logo %>
              <% end %>
            </div>

            <div class="app-name pull-left">
              <%= link_to app do %>
                <%= truncate app.name, length: 10 %>
              <% end %>
            </div>
            <div class="app-desc pull-left">
              <%= truncate app.description, length: 40 %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-3">
      <%= render "shared/list_area", lists: App.top_listed(12), title: "Top 12" %>
    </div>
  </div>
</div>
